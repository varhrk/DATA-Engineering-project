{
	"name": "hospitalflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_HSP_ADM",
						"type": "DatasetReference"
					},
					"name": "source1"
				},
				{
					"dataset": {
						"referenceName": "DS_LOOKUP",
						"type": "DatasetReference"
					},
					"name": "lookupcountrydim"
				},
				{
					"dataset": {
						"referenceName": "Ds_day_dim",
						"type": "DatasetReference"
					},
					"name": "lookupdatedim"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "select1"
				},
				{
					"name": "pivotweekly"
				},
				{
					"name": "lookup1"
				},
				{
					"name": "select2"
				},
				{
					"name": "dailyfromwekly"
				},
				{
					"name": "pivotdaily"
				},
				{
					"name": "derivedweek"
				},
				{
					"name": "aggregatedate"
				},
				{
					"name": "joinaggreweekly"
				}
			],
			"scriptLines": [
				"source(output(",
				"          country as string,",
				"          indicator as string,",
				"          date as date,",
				"          year_week as string,",
				"          value as double,",
				"          source as string,",
				"          url as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source(output(",
				"          country as string,",
				"          country_code_2_digit as string,",
				"          country_code_3_digit as string,",
				"          continent as string,",
				"          population as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> lookupcountrydim",
				"source(output(",
				"          date_key as string,",
				"          date as string,",
				"          year as string,",
				"          month as string,",
				"          day as string,",
				"          day_name as string,",
				"          day_of_year as string,",
				"          week_of_month as string,",
				"          week_of_year as string,",
				"          month_name as string,",
				"          year_month as string,",
				"          year_week as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> lookupdatedim",
				"source1 select(mapColumn(",
				"          country,",
				"          indicator,",
				"          reported_date = date,",
				"          reported_year_week = year_week,",
				"          value,",
				"          source",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"joinaggreweekly pivot(groupBy(country,",
				"          week_start,",
				"          week_end_date,",
				"          population,",
				"          source,",
				"          reported_year_week,",
				"          country_code_2_digit,",
				"          country_code_3_digit),",
				"     pivotBy(indicator, ['Weekly new hospital admissions per 100k', 'Weekly new ICU admissions per 100k']),",
				"     count = sum(value),",
				"     columnNaming: '$V$N',",
				"     lateral: false) ~> pivotweekly",
				"select1, lookupcountrydim lookup(select1@country == lookupcountrydim@country,",
				"     multiple: false,",
				"     pickup: 'any',",
				"     broadcast: 'auto')~> lookup1",
				"lookup1 select(mapColumn(",
				"          country = select1@country,",
				"          indicator,",
				"          reported_date,",
				"          reported_year_week,",
				"          value,",
				"          source,",
				"          country_code_2_digit,",
				"          country_code_3_digit,",
				"          population",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select2",
				"select2 split(indicator == 'Weekly new hospital admissions per 100k' || indicator == 'Weekly new ICU admissions per 100k',",
				"     disjoint: false) ~> dailyfromwekly@(weekly, daily)",
				"dailyfromwekly@daily pivot(groupBy(country,",
				"          reported_date,",
				"          source,",
				"          country_code_2_digit,",
				"          country_code_3_digit,",
				"          population),",
				"     pivotBy(indicator),",
				"     count = sum(value),",
				"     columnNaming: '$V_$N',",
				"     lateral: true) ~> pivotdaily",
				"lookupdatedim derive(week_num = year + '-W' + lpad(week_of_year, 2, '0')) ~> derivedweek",
				"derivedweek aggregate(groupBy(week_num),",
				"     week_start = min(date),",
				"          week_end_date = max(date)) ~> aggregatedate",
				"dailyfromwekly@weekly, aggregatedate join(reported_year_week == week_num,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> joinaggreweekly"
			]
		}
	}
}